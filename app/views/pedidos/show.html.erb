<% content_for :subtitulo do %>
  Orden Número: <%= @pedido.codigo %>
<% end %>

Elaborado por: <%= @pedido.user.nombre %> <%= @pedido.user.apellidos %><br>

Solicitado por:<br>
<%= @pedido.departamento.titular %><br>
<%= @pedido.departamento.nombre %><br>
<hr>

Fecha del Pedido: <%= @pedido.created_at %>
<hr>

<table class="table table-bordered">
  <thead>
    <th>Descripcion</th>
    <th>Código</th>
    <th>Solicitado</th>
    <th>Surtido</th>
  </thead>
  <tbody>
    <% @pedido.enviarpedidos.each do |detalles_pedido| %>
      <tr>
        <td> <%= detalles_pedido.articulo.descripcion %></td>
        <td> <%= detalles_pedido.articulo_id %> </td>
        <td> <%= detalles_pedido.solicitado %> </td>
        <td> <%= detalles_pedido.surtido %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to pedido_path(@pedido, :format => 'pdf'), class: "btn btn-warning", :target => "_blank" do%>
    <i class="glyphicon glyphicon-print"></i> Imprimir Pedido
  <% end %>

  <%= link_to pedidos_path, class:"btn btn-warning" do%>
  <i class="glyphicon glyphicon-repeat"></i> Regresar
  <% end %>
